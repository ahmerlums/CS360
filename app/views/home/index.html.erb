
 <!-- Page Content -->
    <!--<div class="container">-->
      
        
        
        <!-- Jumbotron Header -->
        <div class="row">
            <header class="jumbotron hero-spacer">
                <h1>Welcome To One Point</h1>
                <p class="lead">One point is an online book store. One point is a hub for all luminites. We deal in all course packs for all LUMS courses. We also deliever books on orders.</p>
                <p><a class="btn btn-primary btn-large" href='/orders/new'>Place your order now!</a>
                </p>
            </header>
        </div>
        

        <!--<hr>-->
        
       
        <div class="row bg-light-gray">
            <div class="container">
              <div class="row">
                <div class="col-lg-12 text-center">
                  <h3 class="section-title contact-title text-center white">Featured Books</h3>
                  <!--<h3 class="section-subheading text-muted">Largest Online Book Store</h3>-->
                  </div>
              </div>
            </div>
            <div class="container">
              <div class="row previews">
                <% Book.all.each do |book| %>
                <div class="col-lg-4 col-sm-6">
                  <div class="thumbnail">
                    <a href=<%= book_path(book) %> class="post-image-link">
                      <p><img src=<%= book.image %> class="img-responsive"></p>
                      <!---->
                    </a>
                    <div class="caption">
                      <h3><%= book.courseTitle %></h3>
                      <p><%= book.instructor %></p>
                      <a href=<%= book_path(book) %> class="btn btn-primary">Preview</a>
                      <a href=<%= new_order_path %> class="btn btn-default">Purchase</a>
                  </div>
                </div>
                </div>
                <% end %>
              </div>
        </div>
          </div>
        
        
         
        <!-- Contact Us Section -->
        
        <div class="row text-center noidea">
        <section class="contact-us-section section-padding" id="contact">
             <div class="container">
             <!-- Contact Us Section Title -->
            <h3 class="section-title contact-title text-center white">Contact Us</h3>

             
             <div class="col-md-6 col-md-offset-3">
                 <form action="/" id="contact-form" class="form-horizontal" role="form" method="post">
                     <div class="form-group">
                     <label for="name" class="col-lg-2 control-label">Name</label>
                         <div class="col-lg-10">
                             <input type="text" class="form-control required" id="form-name" name="form-name" placeholder="Alex" />
                         </div>
                     </div>
                     <div class="form-group">
                         <label for="email" class="col-lg-2 control-label">Email</label>
                         <div class="col-lg-10">
                             <input type="email" class="form-control required" id="form-email" name="form-email" placeholder="eg.alex@gmail.com" />
                         </div>
                     </div>
                     <div class="form-group">
                         <label for="tel" class="col-lg-2 control-label">Mobile</label>
                         <div class="col-lg-10">
                             <input type="tel" class="form-control" id="form-tel" name="form-tel" placeholder="eg.03xx-xxxxxxx">
                        </div>
                     </div>
                     <div class="form-group">
                         <label for="assunto" class="col-lg-2 control-label">Subject</label>
                         <div class="col-lg-10">
                           <input type="text" class="form-control required" id="form-subject" name="form-subject" placeholder="Subject" />
                         </div>
                     </div>
                     <div class="form-group">
                         <label for="mensagem" class="col-lg-2 control-label">Text</label>
                         <div class="col-lg-10">
                             <textarea class="form-control required" rows="3" id="form-message" name="form-message" placeholder="Message" /></textarea>
                         </div>
                     </div>
                     <div class="form-group">
                         <div class="col-lg-offset-2 col-lg-10">
                             <button type="submit" class="btn btn-default">Send Message</button>
                         </div>
                     </div>
                 </form>
             </div>
         </div>
     </section>
     </div>

        <!-- End Of Contact Us Section -->
        
        <!-- /.row -->

        <!-- Footer -->
        <div class="row ">
            <div class="col-lg-12">
                <p>Copyright &copy; SE Group, Spring 2016</p>
            </div>
        </div>

