<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:bookIDs) %>:</strong></dt>
  <dd><%= @order.bookIDs %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customerID) %>:</strong></dt>
  <dd><%= @order.customerID %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @order.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dateOrdered) %>:</strong></dt>
  <dd><%= @order.dateOrdered %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantities) %>:</strong></dt>
  <dd><%= @order.quantities %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
