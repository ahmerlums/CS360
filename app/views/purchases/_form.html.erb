<%= form_for @purchase, :html => { :class => "form-horizontal purchase" } do |f| %>

  <% if @purchase.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @purchase.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :bookID, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :bookID, :class => 'form-control' %>
    </div>
    <%=f.error_span(:bookID) %>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <%=f.error_span(:quantity) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                purchases_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
