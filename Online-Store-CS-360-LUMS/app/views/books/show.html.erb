<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:courseTitle) %>:</strong></dt>
  <dd><%= @book.courseTitle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:courseCode) %>:</strong></dt>
  <dd><%= @book.courseCode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructor) %>:</strong></dt>
  <dd><%= @book.instructor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:school) %>:</strong></dt>
  <dd><%= @book.school %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ourPrice) %>:</strong></dt>
  <dd><%= @book.ourPrice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:canotechPrice) %>:</strong></dt>
  <dd><%= @book.canotechPrice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:numCopies) %>:</strong></dt>
  <dd><%= @book.numCopies %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bookTitle) %>:</strong></dt>
  <dd><%= @book.bookTitle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
  <dd><%= @book.author %></dd>
  <dt><strong><%= model_class.human_attribute_name(:edition) %>:</strong></dt>
  <dd><%= @book.edition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dept) %>:</strong></dt>
  <dd><%= @book.dept %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @book.comment %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
