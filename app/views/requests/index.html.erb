<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Edition</th>
      <th>Booktitle</th>
      <th>Instructor</th>
      <th>Coursecode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.author %></td>
        <td><%= request.edition %></td>
        <td><%= request.bookTitle %></td>
        <td><%= request.instructor %></td>
        <td><%= request.courseCode %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
